{
  "name": "mobius",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "preinstall": "npx only-allow npm",
    "format": "prettier . --write",
    "lint": "eslint . --fix",
    "type-check": "svelte-check src",
    "dev:ff": "cross-env ENV=development BROWSER=firefox node esbuild",
    "dev:cm": "cross-env ENV=development BROWSER=chromium node esbuild",
    "build:ff": "cross-env ENV=production BROWSER=firefox node esbuild",
    "build:cm": "cross-env ENV=production BROWSER=chromium node esbuild",
    "webext": "web-ext run --source-dir dist --firefox-profile %APPDATA%/Mozilla/Firefox/Profiles/j1b8xzay.default-release"
  },
  "dependencies": {
    "@tsconfig/svelte": "^5.0.2",
    "@types/chrome": "^0.0.253",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "autoprefixer": "^10.4.16",
    "cross-env": "^7.0.3",
    "esbuild": "^0.19.7",
    "esbuild-plugin-clean": "^1.0.1",
    "esbuild-postcss": "^0.0.4",
    "esbuild-svelte": "^0.8.0",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "eslint-plugin-sort-keys-fix": "^1.1.2",
    "eslint-plugin-unused-imports": "^3.0.0",
    "postcss": "^8.4.31",
    "prettier": "^3.1.0",
    "svelte-check": "^3.6.2",
    "tailwindcss": "^3.3.5",
    "typescript": "^5.3.2",
    "web-ext": "^7.8.0",
    "web-ext-types": "^3.2.1"
  }
}
